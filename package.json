{
  "name": "trane-thermostat-api",
  "version": "1.0.1",
  "description": "Node.js TypeScript library for controlling Trane/Nexia/American Standard thermostats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "trane",
    "nexia",
    "american-standard",
    "thermostat",
    "typescript",
    "hvac"
  ],
  "author": "sbs44",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.30",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^29.7.0",
    "jiti": "^2.6.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "homebridge": "^1.11.1"
  },
  "peerDependenciesMeta": {
    "homebridge": {
      "optional": true
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sbs44/trane-thermostat-api.git"
  },
  "bugs": {
    "url": "https://github.com/sbs44/trane-thermostat-api/issues"
  },
  "homepage": "https://github.com/sbs44/trane-thermostat-api#readme"
}
